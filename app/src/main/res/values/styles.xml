<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--This is for Toolbar Theme config -->
    <style name="ToolBarTheme" parent="@style/Theme.MaterialComponents.Light">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="elevation">2dp</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="subtitleTextAppearance">@style/Toolbar.SubTitle</item>
        <item name="contentInsetEnd">@dimen/spacing_large</item>
        <item name="contentInsetStart">@dimen/spacing_large</item>
    </style>

    <style name="MenuActionTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:actionMenuTextAppearance">@style/MenuActionTextAppearance</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Toolbar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>


    <!-- Tab Bar Themes-->
    <style name="CustomTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearanceStyle</item>
        <item name="tabTextColor">@color/light_red</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearanceStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>
